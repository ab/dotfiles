[user]
	name = Andy Brody
	email = git@abrody.com
    signingkey = 5F57CDC5
[alias]
	stat = status
	co = checkout
	cp = cherry-pick
	fshow = ! sh -c 'git show --pretty="format:" --name-only $1 | grep -v "^$" | uniq | sed -e "s#^#`git rev-parse --show-toplevel`/#"' -
	vim   = ! sh -c 'vim `git fshow $1`' -
	edit  = ! sh -c '$EDITOR `git fshow $1`' -
	amend = commit --amend
	pushup = !git push --set-upstream origin $(git rev-parse --abbrev-ref HEAD)
	uncommit = reset --soft HEAD~1
[blame]
	date = short
[color]
	ui = auto
[core]
	excludesfile = ~/.gitignore_global
[push]
	default = tracking
[log]
	decorate = true
[diff]
	prompt = false
	noprefix = true
[difftool]
	prompt = false
[mergetool]
	prompt = false
[web]
	browser = xdg-open
